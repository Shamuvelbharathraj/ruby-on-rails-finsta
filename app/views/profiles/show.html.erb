<div class="d-flex h-100 justify-content-center align-items-center">
    <div class="fs-4">
        <div class="d-flex gap-2">
            <div class="fs-5">User Id : </div>
            <div class="fw-bold w-50 text-center"><%= current_user.id%></div>
        </div>
        <div class="d-flex gap-2">
            <div class="fs-5">Mail id : </div>
            <div class="fw-bold"><%= current_user.email%></div>
        </div>
        <div class="d-flex gap-2">
            <div class="fs-5">Created at : </div>
            <div class="fw-bold"><%= current_user.created_at%></div>
        </div>
        <div class="d-flex gap-2">
            <div class="fs-5">Updated at : </div>
            <div class="fw-bold"><%= current_user.updated_at%></div>
        </div>
        <div class="d-flex gap-3 mt-4">
            <%= link_to "Edit Account", edit_user_registration_path , class: "btn btn-dark ",remote: true, "data-bs-toggle"=> "modal", "data-bs-target"=> "#editBox"%>
            <%= button_to "Delete Account", user_registration_path,method: :delete,class: "btn btn-danger"%>
            <%= button_to "Sign out", destroy_user_session_path,method: :delete,class: "btn btn-warning"%>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editBox" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-lg modal-dialog-centered ">
    <div class="modal-content" id="edit-content">

    </div>
  </div>
</div>