<%if notice%>
  <p class="my-2 alert alert-success w-50 mx-auto"><%= notice %></p>
<%end%>
<div class="d-flex">
  <a href="<%= topics_path%>"><i class="bi bi-arrow-left-circle-fill fs-1 text-dark"></i></a>
  <div class="ms-auto d-flex">
    <a href="<%= edit_topic_path(@topic)%>" class="m-3 py-0 rounded-circle btn btn-outline-dark"><i class=" bi bi-vector-pen fs-3"></i></a>
    <%= button_to "", @topic ,method: :delete,class: "m-3 py-0 rounded-circle btn btn-outline-danger bi bi-trash3-fill fs-3" %>
  </div>
</div>

<div class="fs-4 text-center border border-dark border-1 rounded p-3 w-50 m-auto" style="box-shadow:0px 0px 5px 2px black;">
  <%= render @topic %>
</div>

<div class="position-absolute" style="bottom:3rem;right:3rem;">
  <a href="<%= topic_posts_path(@topic)%>" class="m-3"><i class="bi bi-arrow-right-circle-fill text-success display-4"></i></a>
</div>
