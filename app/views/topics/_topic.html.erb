<div id="<%= dom_id topic %>" >
  <div class="d-flex border border-1 justify-content-center align-items-center fw-bold fs-1" style="min-height:10rem;word-break:break-all;box-shadow:0px 0px 10px 2px black inset;">
    <%= topic.name %>
  </div>

  <div class="text-start fs-5" style="word-break:break-all;">
    <div class="fw-bold fs-6">Description</div>
    <%= topic.description %>
  </div>

  <div class="text-end" style="width:100%;font-size:15px;">Posts: <b><%= topic.posts.count %></b></div>

</div>
