<p style="color: green"><%= notice %></p>

<%= render @comment %>

<div>
  <% if can? :update, @comment%>
    <%= link_to "Edit this comment", edit_topic_post_comment_path(@topic,@post,@comment) %> |
  <%end%>
  <%= link_to "Back", topic_post_path(@topic,@post) %>
  <% if can? :destroy, @comment%>
    <%= button_to "Destroy this comment", topic_post_comment_path(@topic,@post,@comment), method: :delete %>
  <%end%>
</div>

<%if @commentsrating.count>0%>
  <div>
    <table>
      <thead>
        <th>rating</th>
        <th>User</th>
      </thead>
      <tbody>
        <% @commentsrating.each do |star|%>
          <tr>
            <td><%= star.no %></td>
            <td><%= star.user.email %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
<%else%>
<div>Empty ratings</div>
<%end%>
